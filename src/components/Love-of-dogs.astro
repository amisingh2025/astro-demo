---
export interface Props {
    position: string,
    imageUrl: string,
    title: string,
    description:string

}
const { position, imageUrl, title, description } = Astro.props;
---

<div class="flex items-center space-x-6 bg-blue-900 mt-2.5">
    <div class=`{max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4 ${position === 'right' ? 'flex-row-reverse' : ''}`>
        <!-- Image Section -->
        <div class="flex items-center">
            <img src={imageUrl} alt={title} class="object-cover rounded-lg"/>
        </div>
        
        <!-- Content Section -->
        <div class="flex-grow">
            <h2 class="text-xl font-semibold text-white">{title}</h2>
            <p class="text-white font-normal">{description}</p>
        </div>
    </div>
</div>