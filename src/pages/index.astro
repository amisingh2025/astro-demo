---

import Layout from '../layouts/Layout.astro';
import HeroComponent from '../components/HeroComponent.astro';
import TextComponent from '../components/TextComponent.astro';
import Carousel from '../components/Carousel.astro';
import Rehoming from '../components/Rehoming.astro';
import imageUrl from '../images/love-of-dog.webp';
import ImageContent from '../components/Love-of-dogs.astro';

const imageDetails = {
  title: 'For the love of dogs',
  description: 'Alison is back for another series! Tune in every Tuesday, 8:30pm on ITV as she meets some of the animals in our care and follows them on their journeys.',
};
---

<Layout>
	<HeroComponent/>
	<TextComponent/>
	<Carousel/>
	<Rehoming/>
	<ImageContent
		position="right" 
		imageUrl={imageUrl.src}
		title={imageDetails.title}
		description={imageDetails.description}
	/>
	<ImageContent
		position="left" 
		imageUrl={imageUrl.src}
		title={imageDetails.title}
		description={imageDetails.description}
	/>
</Layout>

